model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  commenter User     @relation(fields: [userId], references: [id])
  userId    Int

  @@map("comment")
}
